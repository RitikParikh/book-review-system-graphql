  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "ts-node ./tests/helpers/setup-tests.ts && jest --watch --verbose",
    "format": "prettier --ignore-path ./.cli.prettierignore --write ./**/*.{js,json,ts}",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts"
  },
  "keywords": [],
  "author": {
    "name": "Ritik Parikh",
    "url": "https://github.com/RitikParikh"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "apollo-server": "^3.13.0",
    "bcryptjs": "^2.4.3",
